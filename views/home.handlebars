    <div id="helpButtonContainer" onclick="window.location.href = 'helpHome';">
        <img src="/img/help.png" id="helpImg">
    </div>

    <!-- End of the help button/page -->
    <script>
        sessionStorage.shuffle = "false";
        sessionStorage.totalFriends = "0";
        sessionStorage.totalSongs= "0";
        sessionStorage.recountSongs ="true";
        sessionStorage.recountFriends ="true";
        sessionStorage.maxFriends="0";
        function added() {
          document.getElementById("addFont").innerHTML = "Added";
          $("#addFont").css("background-color", "lightgreen");
      }
  </script>
</body>
</html>

