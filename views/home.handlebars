<!doctype html>
<html>
<head>
    <title>Home Page</title>
    <!-- Default Header -->
    {{> default}}
    <!-- End Default Header -->

    <!-- Home Header -->
    {{> homeTemplate}}
    <!-- End Home Header -->
</head>

<body>   
    <center>
        <a href="login">
            <div id="back-container">
                <h1 class="display-4"><</h1>
            </div>
        </a>
        <div id="welcome">
            <h1 class="display-4" id="welcomeTitle">Welcome!</h1>
            <div id="Title-to">
                <h1 id="welcomeTitle">To</h1>
            </div>
            <div id="DJAM">
                    <div id="DJAM-img">
                        <img src="/img/Djam.png" id="innerImg">
                    </div>
                <!-- <h1 class="display-3" id="welcomeTitle">DJAM</h1> -->
            </div>
        </div>         
        <div id="host-container">
            <button class="button button2" onclick="window.location.href = 'host';" id="host-btn">
