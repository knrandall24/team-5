<!doctype html>
<html>
<head>
  <title>Host Song Page</title>
  <!-- Default Header -->
  {{> default}}
  <!-- End Default Header -->
  <!-- Host Header -->
  {{>hostTemplate}}
  <!-- End Host Header -->

  
  <!-- HostSongs Header -->
  {{>hostSongsTemplate}}
  <!-- End HostSongs Header -->
<!--     <style type="text/css"> 
    #friendName{
        color: #000080; 
