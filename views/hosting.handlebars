                                        <p class="h5 placeholderName{{id}}" id="placeHolderName">{{name}}{{id}}</p>
                                    </div>

                                    <div id="placeHolderDetails">
                                      <p class="artist"> {{name}}</p>
                                      <p class="album">{{name}}</p>
                                  </div>
                              </div>
