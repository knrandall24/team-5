                <script>
                    var input = 'artist'+ sessionStorage.songs;
                    var artist = sessionStorage.getItem(input);
                    input = 'album'+ sessionStorage.songs;
                    var album = sessionStorage.getItem(input);

                    input = 'title' + sessionStorage.songs;

