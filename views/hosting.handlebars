                              {{/each}}

                              <script>

                                var currSong = sessionStorage.songs;
                                currSong = parseInt(currSong, 10);
                                var totalSongs = sessionStorage.totalSongs;
                                totalSongs = parseInt(totalSongs, 10);

                                // start off the song counter
                                var sindex = 1;
                                if(Number.isInteger(currSong)){
                                    sindex = currSong + 1;
                                }
                                if(totalSongs < 5){
                                    totalSongs = 5;
                                }

                                var pindex = 1;                 //the place holder index
                                while(pindex <= 30){            //loop through the pindex

                                    //this if statment checks if the placeholder's image and title exists
                                    if(document.getElementById('placeHolder' + pindex).children[0].children[0] !== "" && document.getElementById('placeHolder' + pindex).children[1].children[0] !== ""){
                                          document.getElementById('placeHolder' + pindex).children[0].children[0].src = "/img/"+sindex+".png";      //this changes the image of the div
                                          document.getElementById('placeHolder' + pindex).children[1].children[0].innerHTML = sessionStorage.getItem("title" + sindex);     //this changes the title of the song
                                      }

                                    if(sindex === totalSongs){         //reset the songs
                                        sindex = 1;
                                    }

                                    pindex++;       //increase the placeHolder index
                                    sindex++;       //increase the song index
                                }


                            </script>
                        </div>
                    </div>
                </div>

