                            var min=5; 
                            var max=35;  
                            var random =Math.floor(Math.random() * (+max - +min)) + +min; 
                            console.log("random: " + random);
                            document.getElementById("crt").currentTime = Number(random);
                        }

                        document.getElementById("crt").play();

                        //autoplay next song
