<!doctype html>
<html>
<head>
    <title>Login Page</title>
    <!-- Default Header -->
    {{> default}}
    <!-- End Default Header -->

    <!-- login Header -->
    {{> loginTemplate}}
    <!-- End login Header -->
    {{> facebook}}
    <script src="/js/facebook.js"></script>
</head>

<body>
    <body2 class="body2">
        <center>
            <div id="backView">
                <div id="welcome">
                    <h1 class="display-3" id="welcomeTitle">Welcome!</h1>
                    <h1 class="display-3" id="welcomeTitle">To</h1>
                    <div id="DJAM">
                        <div id="DJAM-img">
                            <img src="/img/Djam.png" id="innerImg">
                        </div>
                    </div>
                </div>        
                <div id="middle">
                    <div id="firstLine">
                        <h5 id="middleWords">Make listening to music</h5>
                    </div>
                    <div id="secondLine">
                        <h5 id="middleWords">A more sociable experience!</h5>
                    </div>
                </div>        
                <div id="in-login-container">
                    <button class="button button2" disabled>Login</button>
                </div>
            </div>


            <!-- Actual Login Stuff -->
            <div id="overlay">                
                <div>
                    <a href="back">
                        <div id="back">
                            <img id="back_img" src="/img/exit.png">
                        </div>
                    </a>
                </div>
                <div id="icon">
                    <center>
                        <img id="myIcon" src="/img/facebook.png">
                    </center>
                </div>
                <div id="the-form">
                    <form class="needs-validation" novalidate>

                        <!-- Start of Entering the Email: -->
                        <div class="form-group">

                            <h4 class="h4">Email address</h4>
                            <!-- Email input: -->
                            <input id="textboxid" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="name@example.com" required>

                            <!-- Email validation: -->
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid email.
                            </div>

                            <p><small>We'll never share your email with anyone else.</small></p>
                        </div>
                        <!-- End of the Email -->

                        <div class="form-group">
                            <h4 class="h4">Password</h4>
                            <input id="textboxid" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
                            <!-- Password validation: -->
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid password.
                            </div>
                        </div>

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Remember Me</label>
                        </div>
                        <br>
                        <button class="btn btn-success btn-lg" type="submit">Submit</button>
                        <br>
                        <p class="lead">--- OR ---</p>
                        <div id="fb-button">
                            <fb:login-button scope="public_profile,email" onlogin="checkLoginState();" onclick="loggedInFB()" size="xlarge">Login with Facebook</fb:login-button>
                        </div>
                        <!-- <button  class="btn btn-primary btn-lg" onclick="loggedInFB()"> -->
                            <!-- </button> -->
                        </form>
                        <br>
                    </div>
                </div>
            </center>
            <script>
              if (typeof(Storage) !== "undefined") {
                sessionStorage.hello = 5;
                console.log(sessionStorage.friends);
            } else {
                console.log("Sorry, your browser does not support web storage...");
            }
        </script>

        <script>
            function loggedIn() {
                window.location.href='home';
            };
            function loggedInFB() {
                window.location.href = 'home';
            };
            (function() {
              'use strict';
              window.addEventListener('load', function() {
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.getElementsByClassName('needs-validation');
    // Loop over them and prevent submission
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
      } 
      else {
          event.stopPropagation();
          event.preventDefault();
          console.log(form.checkValidity()===true);
          window.location.href='home';
      }
  }, false);
      form.classList.add('was-validated');
  });
}, false);
          })();
      </script>
  </body2>
</body>
</html>
